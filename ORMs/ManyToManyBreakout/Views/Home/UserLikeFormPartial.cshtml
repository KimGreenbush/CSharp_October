@model UserLikesColor
<form asp-action="LikeColor" asp-controller="Home" method="post">
    <div class="form-group row">
        <label asp-for="UserId" class="col-sm-4"></label>
        <select asp-for="UserId" class="col-sm-8 form-control">
            @foreach(User user in ViewBag.AllUsers)
            {
                <option value="@user.UserId">@user.Name</option>
            }
        </select>
    </div>
    <div class="form-group row">
        <label asp-for="ColorId" class="col-sm-4"></label>
        <select asp-for="ColorId" class="col-sm-8 form-control">
            @foreach(Color color in ViewBag.AllColors)
            {
                <option value="@color.ColorId">@color.Name</option>
            }
        </select>
    </div>
    <div class="form-group row">
        <input type="submit" value="Add Like" class="col-sm-4 offset-sm-4 btn btn-primary">
    </div>
</form>