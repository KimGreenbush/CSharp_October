@using EntityIntro.Models
@model GhostHasEvidence
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>Add Evidence to @ViewBag.Ghost.Type</h1>
        <form asp-action="SubmitEvidence" asp-controller="Ghost" asp-route-GhostId="@ViewBag.Ghost.GhostId" method="post">
            <div class="form-group row">
                <label class="col-sm-4">Type: </label>
                <select asp-for="EvidenceId" class="col-sm-4 form-control">
                    @foreach(Evidence evidence in ViewBag.Evidence)
                    {
                        <option value="@evidence.EvidenceId">@evidence.Name</option>
                    }
                </select>
            </div>
            <div class="form-group row">
                <input type="submit" value="Add Evidence" class="col-sm-4 offset-sm-4 btn btn-primary">
            </div>
        </form>
    </div>
</body>
</html>