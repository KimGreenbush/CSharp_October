                {
                    <tr>
                        <td>@vamp.VampireId</td>
                        <td>@vamp.Name</td>
                        <td>@vamp.Birthday</td>
                        <td>@vamp.Victims</td>
                    </tr>
                }
            </tbody>
        </table> *@
    </div>
</body>
</html>