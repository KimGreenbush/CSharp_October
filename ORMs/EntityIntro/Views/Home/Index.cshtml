@using EntityIntro.Models
@model List<Vampire>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h2>All The Vampirs</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Birthday</th>
                    <th>Victims</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Vampire vamp in Model)
                {
                    <tr>
                        <td>@vamp.VampireId</td>
                        <td>@vamp.Name</td>
                        <td>@vamp.Birthday</td>
                        <td>@vamp.Victims</td>
                    </tr>
                }
            </tbody>
        </table>
        <h2>These Vampires Do Almost All of the Killing</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Birthday</th>
                    <th>Victims</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Vampire vamp in Model.Where(v => v.Victims > 100))
                {
                    <tr>
                        <td>@vamp.VampireId</td>
                        <td>@vamp.Name</td>
                        <td>@vamp.Birthday</td>
                        <td>@vamp.Victims</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>