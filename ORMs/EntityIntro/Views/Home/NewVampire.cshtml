@model Vampire
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>Add a New Vampire</h1>
        <div class="col-sm-6 offset-sm-3">
            <form asp-action="SubmitVampire" asp-controller="Home" method="post">
                <div class="form-group row">
                    <span asp-validation-for="Name" class="col-sm-8 offset-sm-4 text-danger"></span>
                    <label asp-for="Name" class="col-sm-4"></label>
                    <input asp-for="Name" class="col-sm-8 form-control">
                </div>
                <div class="form-group row">
                    <span asp-validation-for="Birthday" class="col-sm-8 offset-sm-4 text-danger"></span>
                    <label asp-for="Birthday" class="col-sm-4"></label>
                    <input asp-for="Birthday" class="col-sm-8 form-control">
                </div>
                <div class="form-group row">
                    <input type="submit" value="Submit Vampire!" class="col-sm-4 offset-sm-4 btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</body>
</html>